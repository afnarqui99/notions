{
  "name": "terminal-command-groups",
  "displayName": "afnarqui Terminal Command Groups",
  "description": "Organiza y gestiona comandos de terminal agrupados por categorías",
  "version": "0.1.4",
  "publisher": "afnarqui",
  "engines": {
    "vscode": ">=1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "afnarqui",
    "afn",
    "terminal",
    "commands",
    "groups",
    "productivity",
    "git",
    "docker",
    "npm"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminalCommandGroups.manageGroups",
        "title": "Manage Command Groups",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.showCommands",
        "title": "Show Saved Commands",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.selectWorkspace",
        "title": "Select Workspace for Commands",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.addCommand",
        "title": "Add Current Command to Group",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.executeCommand",
        "title": "Execute Command",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.copyCommand",
        "title": "Copy Command",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.copyTerminalContent",
        "title": "Copy Terminal Content",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.copyTerminalSelection",
        "title": "Copy Terminal Selection",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.deleteCommand",
        "title": "Delete Command",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.refresh",
        "title": "Refresh",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.showStats",
        "title": "Show Statistics",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.exportGroups",
        "title": "Export Groups",
        "category": "Terminal Command Groups"
      },
      {
        "command": "terminalCommandGroups.importGroups",
        "title": "Import Groups",
        "category": "Terminal Command Groups"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "terminalCommandGroups",
          "name": "Terminal Command Groups",
          "when": "terminalCommandGroups.hasWorkspace"
        }
      ]
    },
    "configuration": {
      "title": "Terminal Command Groups",
      "properties": {
        "terminalCommandGroups.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Guardar automáticamente los comandos ejecutados"
        },
        "terminalCommandGroups.autoDetectContext": {
          "type": "boolean",
          "default": true,
          "description": "Detectar automáticamente el contexto del proyecto"
        },
        "terminalCommandGroups.maxCommands": {
          "type": "number",
          "default": 1000,
          "description": "Número máximo de comandos a guardar"
        },
        "terminalCommandGroups.storagePath": {
          "type": "string",
          "default": "",
          "description": "Ruta personalizada para guardar los comandos (vacío = .vscode/terminal-command-groups.json)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.32.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/afnarqui/vscode-terminal-command-groups.git"
  },
  "license": "MIT",
  "author": {
    "name": "Andres Naranjo",
    "email": "afnarqui@hotmail.com"
  }
}

